{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "semi": ["warn", "always"],
        "indent": ["error", 4,
          {"SwitchCase":  1}],
        "quotes": ["error", "single",
          {"allowTemplateLiterals":  true}]
    }
}
